<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/et_input_layout_pm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_size_8"
        android:layout_marginRight="@dimen/dimen_size_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_input_pm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="应用名称"
            android:maxLength="22"
            android:maxLines="1"
            android:paddingLeft="@dimen/dimen_size_12"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/dimen_text_size_14" />
    </android.support.design.widget.TextInputLayout>
</android.support.constraint.ConstraintLayout>