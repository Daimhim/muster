<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cl_ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_plugin_name_pm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_size_12"
        android:layout_marginTop="@dimen/dimen_size_12"
        android:layout_marginRight="@dimen/dimen_size_12"
        android:text="微信"
        android:textColor="@color/cl_333333"
        android:textSize="@dimen/dimen_text_size_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_package_name_pm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_size_12"
        android:layout_marginRight="@dimen/dimen_size_12"
        android:text="com.tencent.mm"
        android:textColor="@color/cl_333333"
        android:textSize="@dimen/dimen_text_size_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_plugin_name_pm" />

    <TextView
        android:id="@+id/tv_description_pm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_size_12"
        android:layout_marginRight="@dimen/dimen_size_12"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="在开发Android应用时，通常情况下是通过USB数据线连接设备和计算机，但对于一些需要使用USB设备的应用，这种方法就碰到了麻烦，手机的USB接口已经和外接的USB设备连接，无法再连数据线，此时可以通过网络TCPIP的方法来进行。也就是然ADB 通过网络来连接设备，而无需USB数据线。"
        android:textColor="@color/cl_666666"
        android:textSize="@dimen/dimen_text_size_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_package_name_pm" />

    <TextView
        android:id="@+id/tv_new_version_pm"
        android:text="最新版本:1.0.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_size_12"
        android:layout_marginTop="@dimen/dimen_size_8"
        android:textColor="@color/cl_333333"
        android:layout_marginBottom="@dimen/dimen_size_12"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/dimen_text_size_11"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_description_pm" />

    <TextView
        android:id="@+id/tv_up_time_pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_size_8"
        android:layout_marginRight="@dimen/dimen_size_12"
        android:text="更新时间:2018.11.01.11:15"
        android:textColor="@color/cl_666666"
        android:textSize="@dimen/dimen_text_size_12"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_description_pm" />

</android.support.constraint.ConstraintLayout>