<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cl_ffffff">

    <ImageView
        android:id="@+id/iv_logo_pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_size_12"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="App Name"
        android:id="@+id/tv_app_name_pm"
        android:layout_width="@dimen/dimen_size_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_size_10"
        android:layout_marginRight="@dimen/dimen_size_12"
        android:layout_marginTop="@dimen/dimen_size_2"
        android:textColor="@color/cl_333333"
        android:textSize="@dimen/dimen_text_size_15"
        app:layout_constraintLeft_toRightOf="@+id/iv_logo_pm"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_logo_pm" />

    <TextView
        android:id="@+id/tv_package_name_pm"
        android:text="package Name"
        android:layout_width="@dimen/dimen_size_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_size_10"
        android:layout_marginRight="@dimen/dimen_size_12"
        android:textColor="@color/cl_666666"
        android:textSize="@dimen/dimen_text_size_14"
        app:layout_constraintBottom_toBottomOf="@+id/iv_logo_pm"
        app:layout_constraintLeft_toRightOf="@+id/iv_logo_pm"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_app_name_pm" />
</android.support.constraint.ConstraintLayout>