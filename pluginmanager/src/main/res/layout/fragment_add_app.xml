<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_f5f4f4">

    <TextView
        android:id="@+id/tv_title_pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_size_12"
        android:text="App登记"
        android:textColor="@color/cl_333333"
        android:textSize="@dimen/dimen_text_size_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_upload_apk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_size_12"
        android:text="上传APK"
        android:textColor="@color/cl_333333"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bt_download_apk"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_pm" />

    <Button
        android:id="@+id/bt_download_apk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下载APK"
        android:textColor="@color/cl_333333"
        app:layout_constraintBottom_toBottomOf="@+id/bt_upload_apk"
        app:layout_constraintLeft_toRightOf="@+id/bt_upload_apk"
        app:layout_constraintRight_toLeftOf="@+id/bt_select_apk" />

    <Button
        android:id="@+id/bt_select_apk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择APK"
        android:textColor="@color/cl_333333"
        app:layout_constraintBottom_toBottomOf="@+id/bt_upload_apk"
        app:layout_constraintLeft_toRightOf="@+id/bt_download_apk"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rl_recycler_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/bt_upload_apk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</android.support.constraint.ConstraintLayout>